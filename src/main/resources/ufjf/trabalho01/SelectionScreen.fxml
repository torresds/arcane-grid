<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ufjf.trabalho01.SelectionController"
            prefWidth="400" prefHeight="300">
    <Label text="Duelo de Personagens" layoutX="120" layoutY="20" style="-fx-font-size:18px;"/>

    <!-- Jogador 1 -->
    <Label text="Jogador 1:" layoutX="20" layoutY="70"/>
    <TextField fx:id="txtName1" promptText="Nome" layoutX="100" layoutY="65" prefWidth="200"/>
    <ComboBox fx:id="cbClass1" layoutX="100" layoutY="100" prefWidth="200"/>

    <!-- Jogador 2 -->
    <Label text="Jogador 2:" layoutX="20" layoutY="150"/>
    <TextField fx:id="txtName2" promptText="Nome" layoutX="100" layoutY="145" prefWidth="200"/>
    <ComboBox fx:id="cbClass2" layoutX="100" layoutY="180" prefWidth="200"/>

    <Button text="Iniciar Duelo" onAction="#onStart"
            layoutX="150" layoutY="240" prefWidth="100"/>
</AnchorPane>
